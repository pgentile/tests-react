{
  "presets": [
    [
      "env",
      {
        "modules": false,
        "targets": {
          "browsers": [
            "last 3 chrome versions",
            "last 3 firefox versions",
            "last 2 safari versions",
            "last 2 edge versions"
          ],
          "uglify": true
        },
        "useBuiltIns": true
      }
    ],
    "react",
    "stage-2"
  ],
  "plugins": [
    "lodash"
  ],
  "env": {
    "test": {
      "presets": [
        [
          "env",
          {
            "targets": {
              "node": true
            },
            "useBuiltIns": true
          }
        ],
        "react",
        "stage-2"
      ]
    }
  }
}
